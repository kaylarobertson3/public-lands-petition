<section id="main">
<h1 class="white">Update your info</h1>

<section id="loginWrapper">
    <form action="/updateInfo" method="post" id="edit">
        <p class="white">
            First Name:
        </p>
          <input type="text" name="first" placeholder="First Name" value="{{first}}">
          <p class="white">
              Last Name:
          </p>
          <input type="text" name="last" placeholder="Last Name" value="{{last}}">
          <p class="white">
              Email:
          </p>
          <input type="email" name="email" placeholder="Email" value="{{email}}">
          <!-- <input type="password" name="password" placeholder="Password"> -->
          <p class="white">
              Age:
          </p>
          <input type="text" name="age" placeholder="Age" value="{{age}}">
          <p class="white">
              City:
          </p>
          <input type="text" name="city" placeholder="City" value="{{city}}">
          <!-- <input type="text" name="website" placeholder="Website" value="{{website}}"> -->
          <button class="signButton buttonHover" name="signed">Save changes</button>
      </form>
  </section>
</section>
