<section id="main">
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <h1 class="white">Our supporters</h1>
    {{#showCity}}
        <h1 class="white">from {{city}}</h1>
    {{/showCity}}
    <br />
    <ul class="signersul white" style="padding-left: 0px;">
    {{#each signers}}
        <li class="signersli white">
            <p class="white">Name: {{ this.first }} {{ this.last }} | Age: {{ this.age}} | <a class="white" href="/signers/{{city}}">{{this.city}}</a></p>
        </li>
    {{/each}}
    </ul>
    <br />
    <br />
    <p class="white">Click on a city to view all signers from that location</p>
    <br />
    {{#showCity}}
            <a href="/signers"><button class="signButton buttonHover"><h4>Back to all signers</h4></button></a>
    {{/showCity}}
</section>
