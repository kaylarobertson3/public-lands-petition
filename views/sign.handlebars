  <section id="login">
      <h1 class="white">Sign the petition</h1>
      <section id="loginWrapper">
          <br />
          <h3 class="white">Name: {{first}} {{last}}</h3>
          <br />
          <p class="white">Not you? <a href="/logout"><span class="bold">Logout</span></a></p>
              {{#error}}
              <p class="error">Fields can't be empty</p>
              {{/error}}

              {{#loggedInError}}
              <p class="error">You must be logged in to sign. Need an account?<a href="/register">Sign up here</a></p>
              {{/loggedInError}}

          <form action="/submitSig" method="POST">
              <div id="form">
                  <input class="whiteForm" type="hidden" name="signature" id="sigInput">
              </div>
                  <br />
